# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trading_bot

# =============================================================================
# EXCHANGE CONFIGURATION (Binance)
# =============================================================================
# Get your API keys from https://testnet.binance.vision/ for paper trading
EXCHANGE_API_KEY=your_binance_testnet_api_key_here
EXCHANGE_API_SECRET=your_binance_testnet_api_secret_here
EXCHANGE_TESTNET=true

# =============================================================================
# CAPITAL & RISK MANAGEMENT
# =============================================================================
INITIAL_CAPITAL=500.0
RISK_PER_TRADE=2.0
MAX_OPEN_POSITIONS=1
DAILY_LOSS_LIMIT=6.0

# =============================================================================
# STRATEGY PARAMETERS (Swing Trend Baseline)
# =============================================================================
# Exponential Moving Averages
EMA_FAST=9
EMA_SLOW=21

# RSI (Relative Strength Index)
RSI_LENGTH=14

# Breakout detection
LOOKBACK=40

# ATR (Average True Range) for stop loss
ATR_LENGTH=14

# Risk-Reward ratio for take profit
RR_RATIO=2.5

# Trading timeframe
TIMEFRAME=1h

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# TIMEZONE
# =============================================================================
TIMEZONE=Europe/Luxembourg

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. NEVER commit .env to Git (already in .gitignore)
# 2. Use TESTNET for paper trading (EXCHANGE_TESTNET=true)
# 3. Binance Testnet: https://testnet.binance.vision/
# 4. Create Telegram bot: https://t.me/BotFather
# 5. Initial capital: $500 recommended for Phase 0
# 6. Risk per trade: 2% is conservative
# 7. Daily loss limit: 6% prevents catastrophic losses
# 8. Max positions: 1 for Phase 0 simplicity
# =============================================================================
